--
-- Project file for sample applications
--
--
--
with "gtkada";

project Sample is

   for Object_Dir use "obj";
   for Exec_Dir use "bin";
   for Source_Dirs use ("code");

   package Compiler is
      for Default_Switches ("ada") use ("-O2", "-gnatwa", "-gnata", "-fstack-check");
   end Compiler;

   package Builder is
      for Default_Switches ("ada") use ("-s", "-m");
   end Builder;

end Sample;

